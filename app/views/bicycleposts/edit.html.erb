<h1>bicycleposts#edit</h1>
<p>※「<%= @bicyclepost.title %>」の編集</p>
<% if @bicyclepost.errors.any? %>
<ul>
	<% @bicyclepost.errors.full_messates.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<table>
	<%= form_for(@bicyclepost, url:{controller:'bicycleposts', action:'edit'}) do |form| %>
	<tr><th>name</th>
		<td><%= form.text_field :name %></td></tr>
	<tr><th>value</th>
		<td><%= form.text_field :value %></td></tr>
	<tr><th>description</th>
		<td><%= form.text_area :description, {cols:40, rows:10} %></td></tr>
	<tr><th>category ID</th>
		<td><%= form.text_field :bicyclecategory_id %></td></tr>
	<tr><th></th>
		<td><%= form.submit "送信" %></td></tr>
		<% end %>
</table>

<hr>
<p>※ジャンルの一覧</p>
<table>
	<tr>
		<th>Id</th>
		<th>category</th>
	</tr>
	<% @categories.each do |obj| %>
	<tr>
		<td><%= obj.id %></td>
		<td><%= obj.name %></td>
	</tr>
	<% end %>
</table>


