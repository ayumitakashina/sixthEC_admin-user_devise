<h1>Bicyclecategories#add</h1>
<p>Find me in app/views/bicyclecategories/add.html.erb</p>
<% if @bicyclecategory.errors.any? %>

<ul>
	<% @bicyclecategory.errors.full_messages.each do |err| %>
	<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<table>
	<%= form_for(@bicyclecategory, url:{controller:'bicyclecategories',action:'add'}) do |form| %>
	<tr><th>Name</th>
		<td><%= form.text_field :name %></td></tr>
		<tr>
			<th>Memo</th>
				<td><%= form.text_field :memo %></td>
		</tr>

		<tr>
			<th></th>
			<td><%= form.submit "送信" %></td>
		</tr>
		<% end %>
</table>
